{
  "name": "@blaaah/jira-node",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "generate": "openapi-typescript ./schema/swagger-v3.v3.json -o ./src/gen/schema.d.ts",
    "build": "pnpm generate && tsdown",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "openapi-fetch": "catalog:"
  },
  "devDependencies": {
    "openapi-fetch": "catalog:",
    "openapi-typescript": "catalog:",
    "@blaaah/prettier-config": "workspace:*",
    "@blaaah/eslint-config": "workspace:*",
    "@blaaah/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "prettier": "catalog:",
    "eslint": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@blaaah/prettier-config"
}
